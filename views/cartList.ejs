<!DOCTYPE html>
<html>
<head>
	<meta charset='utf-8'>
	<meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <link rel="stylesheet" href="./css/cartListStyle.css">
	<title>Cart</title>
</head>
<body>
	<h1>IT Academy</h1>
    <h2>Panier</h2>

	<div>
        <button type="button" class="action-button" onclick="window.location='/cart/endSubscription'">Finaliser l'inscription</button>

        <button type="button" class="action-button" onclick="window.location='/formations'">Retourner au catalogue de formations</button>
</div>

	<table id="cart-table">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>DÃ©but</th>
            <th>Fin</th>
        </tr>
        
		<% formations.forEach(formation=> { %>
            <tr>
                <td><%= formation.idformation %></td>
                <td><%= formation.name %></td>
                <td><%= formation.price %></td>
                <td><%= formation.startdate %></td>
                <td><%= formation.enddate %></td>
                <td>
                    <button id="delete-subscription" onclick="window.location='/cart/delete/<%= formation.idformation %>'">Supprimer</button>
                </td>
            </tr>
		<% }) %>
    </table>
</body>
</html>